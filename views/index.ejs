<!DOCTYPE html>
<html>
<head>
    <title>All Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <h1>All Posts</h1>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="publish-tab" data-bs-toggle="tab" data-bs-target="#publish-tab-pane" type="button" role="tab" aria-controls="publish-tab-pane" aria-selected="true">Publish</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="draft-tab" data-bs-toggle="tab" data-bs-target="#draft-tab-pane" type="button" role="tab" aria-controls="draft-tab-pane" aria-selected="false">Draft</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="thrash-tab" data-bs-toggle="tab" data-bs-target="#thrash-tab-pane" type="button" role="tab" aria-controls="thrash-tab-pane" aria-selected="false">Thrash</button>
          </li>
    </ul>

    <div class="tab-content">
        <div id="publish-tab-pane" class="tab-pane fade show active" id="publish-tab-pane" role="tabpanel" aria-labelledby="Publish-tab" tabindex="0">
            <!-- Table for Published articles -->
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    Render Published articles here
                    <% articlesPublish.forEach(article => { %>
                        <tr>
                            <td><%= article.title %></td>
                            <td><%= article.category %></td>
                            <td>
                                <!-- Edit Icon -->
                                <a href="/article/<%= article.id %>" class="btn btn-primary btn-sm">Edit</a>
                                <!-- Trash Icon -->
                                <a href="/article/<%= article.id %>" class="btn btn-danger btn-sm">Trash</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div id="draft-tab-pane" class="tab-pane fade" id="draft-tab-pane" role="tabpanel" aria-labelledby="draft-tab" tabindex="0">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                Render Published articles here
                <% articlesDraft.forEach(article => { %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.category %></td>
                        <td>
                            <!-- Edit Icon -->
                            <a href="/edit/<%= article.id %>" class="btn btn-primary btn-sm">Edit</a>
                            <!-- Trash Icon -->
                            <a href="/trash/<%= article.id %>" class="btn btn-danger btn-sm">Trash</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
        <div id="thrash-tab-pane" class="tab-pane fade" id="thrash-tab-pane" role="tabpanel" aria-labelledby="thrash-tab" tabindex="0">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    Render Published articles here
                    <% articlesThrash.forEach(article => { %>
                        <tr>
                            <td><%= article.title %></td>
                            <td><%= article.category %></td>
                            <td>
                                <!-- Edit Icon -->
                                <a href="/edit/<%= article.id %>" class="btn btn-primary btn-sm">Edit</a>
                                <!-- Trash Icon -->
                                <a href="/trash/<%= article.id %>" class="btn btn-danger btn-sm">Trash</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
