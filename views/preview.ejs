<!-- preview.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Article Preview</title>
</head>
<body>
    <h1>Article Preview (Published)</h1>

    <!-- Display the list of published articles -->
        <% publishedArticles.forEach(article => { %>
            <h3><%= article.title %></h3>
            <p><%= article.content %></p>
            <p style="font-weight: bold;"><%= article.category %></p>
            <hr>
            <!-- Display other article details as needed -->
        <% }) %>

    <!-- Pagination Controls -->
    <div class="pagination">
        <% if (prevPage !== null) { %>
            <a href="/article/<%= limit %>/<%= prevPage %>">Previous</a>
        <% } %>

        <% if (nextPage !== null) { %>
            <a href="/article/<%= limit %>/<%= nextPage %>">Next</a>
        <% } %>
    </div>
    <a href="/">back to home</a>
</body>
</html>
